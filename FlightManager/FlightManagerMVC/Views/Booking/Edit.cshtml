@using FlightManagerMVC.Controllers
@using FlightManager.Shared.Extensions
@model FlightManagerMVC.ViewModels.BookingEditVM

@{
    ViewBag.Title = "Edit Booking";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container py-4">
        <div class="card shadow-lg mx-auto" style="max-width: 800px; border-radius: 15px;">
            <div class="card-header text-white" 
                 style="background: linear-gradient(135deg, #4a4a4a 0%, #262626 100%); border-radius: 15px 15px 0 0;">
                <h4 class="mb-0 py-2">Edit Booking</h4>
            </div>

            <div class="card-body p-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>First Name</label>
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Last Name</label>
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PersonalId, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Personal ID</label>
                            @Html.ValidationMessageFor(m => m.PersonalId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.Nationality, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Nationality</label>
                            @Html.ValidationMessageFor(m => m.Nationality, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Phone Number</label>
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.SeatClass, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.SeatClass, Model.SeatClassesList, "Select seat class...", 
                                new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.SeatClass, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.FlightId, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.FlightId, Model.FlightsList, "Select flight...", 
                                new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.FlightId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-dark px-4">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}

