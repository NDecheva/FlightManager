@using FlightManager.Shared.Extensions
@model FlightManagerMVC.ViewModels.BookingDetailsVM

@using FlightManager.Shared
@using FlightManagerMVC


@using System.Security.Claims
@using FlightManagerMVC.Enums

@{ ViewBag.Title = "Details"; }

<div class="container py-4">
    <div class="card shadow-sm mx-auto" style="max-width: 800px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Booking Details</h4>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.Admin.ToString())
                    {
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.PersonalId):</strong>
                            <p>@Html.DisplayFor(model => model.PersonalId)</p>
                        </div>
                    }

                    <div class="mb-3">
                        <strong>@Html.DisplayNameFor(model => model.FirstName):</strong>
                        <p>@Html.DisplayFor(model => model.FirstName)</p>
                    </div>

                    <div class="mb-3">
                        <strong>@Html.DisplayNameFor(model => model.LastName):</strong>
                        <p>@Html.DisplayFor(model => model.LastName)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <strong>@Html.DisplayNameFor(model => model.PhoneNumber):</strong>
                        <p>@Html.DisplayFor(model => model.PhoneNumber)</p>
                    </div>

                    <div class="mb-3">
                        <strong>@Html.DisplayNameFor(model => model.Nationality):</strong>
                        <p>@Html.DisplayFor(model => model.Nationality)</p>
                    </div>

                    <div class="mb-3">
                        <strong>@Html.DisplayNameFor(model => model.SeatClass):</strong>
                        <p>@Html.DisplayFor(model => model.SeatClass)</p>
                    </div>

                    @if (Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.Admin.ToString())
                    {
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.FlightId):</strong>
                            <p>@Html.DisplayFor(model => model.FlightId)</p>
                        </div>
                    }
                </div>
            </div>

            <div class="table-responsive mt-4">
                <h5 class="mb-3">Flight Information</h5>
                <table class="table">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Flight.DepartureLocation)</th>
                            <th>@Html.DisplayNameFor(model => model.Flight.ArrivalLocation)</th>
                            <th>@Html.DisplayNameFor(model => model.Flight.DepartureTime)</th>
                            <th>@Html.DisplayNameFor(model => model.Flight.ArrivalTime)</th>
                            <th>@Html.DisplayNameFor(model => model.Flight.AircraftType)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.Flight.DepartureLocation)</td>
                            <td>@Html.DisplayFor(model => model.Flight.ArrivalLocation)</td>
                            <td>@Html.DisplayFor(model => model.Flight.DepartureTime)</td>
                            <td>@Html.DisplayFor(model => model.Flight.ArrivalTime)</td>
                            <td>@Model.Flight.AircraftType.GetDisplayName()</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                @if (Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.Admin.ToString())
                {
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", null, new { id = Model.Id },
                            new { @class = "btn btn-warning me-2" })
                        @Html.ActionLink("Delete", "Delete", null, new { id = Model.Id },
                            new { @class = "btn btn-danger me-2" })
                    </div>
                }
                @Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
