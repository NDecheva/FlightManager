@using FlightManagerMVC.Controllers
@using FlightManager.Shared.Extensions
@using FlightManagerMVC.Enums
@model FlightManagerMVC.ViewModels.BookingEditVM

@{
    ViewData["Title"] = "Create New Booking";
    Layout = "_CreateLayout";
}

<h2>Create Booking</h2>

<form asp-controller="Booking" asp-action="Create" method="post" class="row g-4">
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-label">User</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person text-light"></i></span>
                <select asp-for="UserId" asp-items="@Model.UsersList" class="form-select">
                    <option value="">Select a user...</option>
                </select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="form-label">Flight</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-airplane text-light"></i></span>
                <select asp-for="FlightId" asp-items="@Model.FlightsList" class="form-select">
                    <option value="">Select a flight...</option>
                </select>
            </div>
            <span asp-validation-for="FlightId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="form-label">Seat Class</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-seat"></i></span>
                <select asp-for="SeatClass" asp-items="@Model.SeatClassesList" class="form-select">
                    <option value="">Select seat class...</option>
                </select>
            </div>
            <span asp-validation-for="SeatClass" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 mt-4">
        <div class="d-flex justify-content-between">
            <a asp-action="List" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create Booking
            </button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

