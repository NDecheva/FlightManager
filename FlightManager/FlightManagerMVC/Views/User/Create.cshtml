@model FlightManagerMVC.ViewModels.UserEditVM
@{

    ViewBag.Title = "Create";
}


<h2>Create</h2>

<p class="h3">User</p>

@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true)

        <div class="form-group">

            <div class="form-group">
                <div class="form-floating mb-3 col-md-3">
                    @Html.EditorFor(model => model.UserName,
                             new { htmlAttributes = new { @class = "form-control my-3", @type = "text", @id = "floatingusername", @placeholder = "jondoe123" } })
                    <label for="floatingusername">Username</label>
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Password,
                         new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "floatingpassword", @placeholder = "qwerty" } })
                <label for="floatingpassword">Password</label>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>


        <div class="form-group">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.FirstName,
                         new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "floatingfirstname", @placeholder = "Jon" } })
                <label for="floatingfirstname">First Name</label>
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            <div class="form-floating mb-2 col-md-3">
                @Html.EditorFor(model => model.LastName,
                         new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "floatinglastname", @placeholder = "Doe" } })
                <label for="floatinglastname">Last Name</label>
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Role, new { @class = "control-label col-md-2" })

           <div class="col-md-3 mb-3"> 

                @Html.DropDownListFor(model => model.Role, Model.Roles, "Choose a role...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role)
             </div> 
         </div>

        <div class="form-group">
            <div class="form-floating mb-2 col-md-3">
                @Html.EditorFor(model => model.Email,
                         new { htmlAttributes = new { @class = "form-control", @type = "email", @id = "floatingemail", @placeholder = "jondoe@mail.com" } })
                <label for="floatingemail">Email</label>
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="form-floating mb-2 col-md-3">
                @Html.EditorFor(model => model.PhoneNumber,
                         new { htmlAttributes = new { @class = "form-control", @type = "tel", @id = "floatingphonenumber", @placeholder = "+359 999 999 999" } })
                <label for="floatingphonenumber">Phone Number</label>
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>

        <div class="form-group">
            <div class="form-floating mb-2 col-md-3">
                @Html.EditorFor(model => model.PersonalId,
                         new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "floatingpersonalid", @placeholder = "123456789" } })
                <label for="floatingpersonalid">Personal Id</label>
                @Html.ValidationMessageFor(model => model.PersonalId)
            </div>
        </div>

        <div class="form-group">
            <div class="form-floating mb-2 col-md-3">
                @Html.EditorFor(model => model.Address,
                         new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "floatingaddress", @placeholder = "21 Jump Str." } })
                <label for="floatingaddress">Address</label>
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>


        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Create" class="btn btn-outline-primary mb-3 mt-2" />
            </div>
        </div>
    </div>

}
<div>

    @Html.ActionLink("Back to List", "List")

</div>