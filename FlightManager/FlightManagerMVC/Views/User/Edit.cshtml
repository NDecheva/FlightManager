@model FlightManagerMVC.ViewModels.UserEditVM

@{
    ViewBag.Title = "Edit User";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container py-4">
        <div class="card shadow-lg mx-auto" style="max-width: 800px; border-radius: 15px;">
            <div class="card-header text-white" 
                 style="background: linear-gradient(135deg, #2c3e50 0%, #1a1a1a 100%); border-radius: 15px 15px 0 0;">
                <h4 class="mb-0 py-2">Edit User Profile</h4>
            </div>

            <div class="card-body p-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Username</label>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Password</label>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>First Name</label>
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Last Name</label>
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Email</label>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Phone Number</label>
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PersonalId, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Personal ID</label>
                            @Html.ValidationMessageFor(m => m.PersonalId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Address</label>
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Role, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.Role, Model.Roles, "Select role...", 
                                new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}