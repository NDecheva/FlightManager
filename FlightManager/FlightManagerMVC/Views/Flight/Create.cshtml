@model FlightManagerMVC.ViewModels.FlightEditVM
@{
    ViewData["Title"] = "Create New Flight";
    Layout = "_CreateLayout";
}

<h2>Create Flight</h2>

<form asp-action="Create" method="post" class="row g-4">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DepartureLocation" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-geo-alt text-light"></i></span>
                <input asp-for="DepartureLocation" class="form-control" placeholder="Enter departure location" />
            </div>
            <span asp-validation-for="DepartureLocation" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ArrivalLocation" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-geo-alt text-light"></i></span>
                <input asp-for="ArrivalLocation" class="form-control" placeholder="Enter arrival location" />
            </div>
            <span asp-validation-for="ArrivalLocation" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DepartureTime" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-clock"></i></span>
                <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
            </div>
            <span asp-validation-for="DepartureTime" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ArrivalTime" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-clock-fill"></i></span>
                <input asp-for="ArrivalTime" class="form-control" type="datetime-local" />
            </div>
            <span asp-validation-for="ArrivalTime" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="AircraftType" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-airplane"></i></span>
                <select asp-for="AircraftType" asp-items="Model.AircraftTypes" class="form-select"></select>
            </div>
            <span asp-validation-for="AircraftType" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="PilotName" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input asp-for="PilotName" class="form-control" placeholder="Enter pilot name" />
            </div>
            <span asp-validation-for="PilotName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="PassengerCapacity" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input asp-for="PassengerCapacity" class="form-control" placeholder="Enter passenger capacity" />
            </div>
            <span asp-validation-for="PassengerCapacity" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="BusinessClassCapacity" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input asp-for="BusinessClassCapacity" class="form-control" placeholder="Enter business class capacity" />
            </div>
            <span asp-validation-for="BusinessClassCapacity" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="AircraftId" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-airplane"></i></span>
                <input asp-for="AircraftId" class="form-control" placeholder="Enter aircraft ID" />
            </div>
            <span asp-validation-for="AircraftId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 mt-4">
        <div class="d-flex justify-content-between">
            <a asp-action="List" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create Flight
            </button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

