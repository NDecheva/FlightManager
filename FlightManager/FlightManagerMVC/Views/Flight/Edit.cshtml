@model FlightManagerMVC.ViewModels.FlightEditVM

@{
    ViewBag.Title = "Edit Flight";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="container py-4">
        <div class="card shadow-lg mx-auto" style="max-width: 800px; border-radius: 15px;">
            <div class="card-header text-white" 
                 style="background: linear-gradient(135deg, #333333 0%, #000000 100%); border-radius: 15px 15px 0 0;">
                <h4 class="mb-0 py-2">Edit Flight Details</h4>
            </div>

            <div class="card-body p-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.DepartureLocation, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Departure Location</label>
                            @Html.ValidationMessageFor(m => m.DepartureLocation, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.ArrivalLocation, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Arrival Location</label>
                            @Html.ValidationMessageFor(m => m.ArrivalLocation, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.DepartureTime, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                            <label>Departure Time</label>
                            @Html.ValidationMessageFor(m => m.DepartureTime, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.ArrivalTime, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                            <label>Arrival Time</label>
                            @Html.ValidationMessageFor(m => m.ArrivalTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PilotName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Pilot Name</label>
                            @Html.ValidationMessageFor(m => m.PilotName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.PassengerCapacity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            <label>Passenger Capacity</label>
                            @Html.ValidationMessageFor(m => m.PassengerCapacity, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.BusinessClassCapacity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            <label>Business Class Capacity</label>
                            @Html.ValidationMessageFor(m => m.BusinessClassCapacity, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(m => m.AircraftId, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            <label>Aircraft ID</label>
                            @Html.ValidationMessageFor(m => m.AircraftId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.AircraftType, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.AircraftType, Model.AircraftTypes, "Select aircraft type...", 
                                new { @class = "form-select form-select-lg" })
                            @Html.ValidationMessageFor(m => m.AircraftType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("List")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-plane me-2"></i>Update Flight
                    </button>
                </div>
            </div>
        </div>
    </div>
}
