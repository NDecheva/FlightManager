﻿@using FlightManagerMVC.Controllers
@model FlightManagerMVC.ViewModels.LoginVM
@{
    ViewBag.Title = "login";
}
<audio id="background-music" autoplay loop>
    <source src="~/audio/1.mp3" type="audio/mpeg">

    Your browser does not support the audio element.
</audio>



<script>
    function playAudio() {
        var audio = document.getElementById("background-music");
        audio.play();
    }
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p class="h4 text-light">Log in</p>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Username,
                         new { htmlAttributes = new { @class = "form-control", @type = "username", @id = "floatinguser", @placeholder = "admin" } })
                <label for="floatinguser">Username</label>
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Password,
                         new { htmlAttributes = new { @class = "form-control", @type = "password", @id = "floatingpassword", @placeholder = "qwerty" } })
                <label for="floatingpassword">Password</label>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="col-md-offset-2">
                <input type="submit" value="Login" class="btn btn-outline-primary mb-3 mt-2" />

            </div>
        </div>
    </div>
}